<p class="field">
	<label>Name</label>
	<%= f.text_field :name %>
</p>
<p class="field">
	<label>Url</label>
	<%= f.text_field :url %>
</p>
<p class="field">
	<label>Description</label>
	<%= f.text_area :description %>
</p>


<script>
$("#links_form").submit(function(){
	$(this).ajaxSubmit({
		success: function(data) {
			$("#topic_links").html(data);
			$.facebox.close();
			init();
		},
		error: function(xhr,err) {
			$("#facebox td.body").html(xhr.responseText);
		}
	})
	return false;
});
</script>