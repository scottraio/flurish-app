<ul class="element_types">
	<% for element_type in @element_types %>
	<li rel="<%= element_type.id %>">
	<%= image_tag("/images/icons/add_#{element_type.name.downcase}.png") %> <%= element_type.name %>
	</li>
	<% end %>	
</ul>

<script>
	$(document).ready(function(){
		$("ul.element_types li").click(function(){
			var type = $(this).attr("rel");
			$.post("<%= branch_elements_path(@branch) %>?type_id="+type, function(data) {
			  $('div#staging').append(data);
				$.facebox.close();
			});
		})
	})
</script>
