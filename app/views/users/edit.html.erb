<div id="title">
	<span>
		<h1><%= image_tag(avatar_url(@user, :thumb)) %> Editing <%= current_user.name %></h1>
	</span>
</div>

<div id="main">
	<div id="edit_user" class="padded">
		<% form_for @user, :html => { :multipart => true } do |f| %>
		  <p class="field">
				<label>First Name</label><%= f.text_field :first_name %>
			</p>
			<p class="field">
				<label>Last Name</label><%= f.text_field :last_name %>
			</p>
			<p class="field">
				<label>Login</label><%= f.text_field :login %>
			</p>
			<p class="field">
				<label>Avatar</label><%= f.file_field :avatar %>
			</p>
			<p class="button"><%= f.submit "Save" %></p>
		<% end %>
	</div>
</div>
