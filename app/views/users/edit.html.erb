	<div id="title">
	<span>
		<h1><%= image_tag(avatar_url(@user, :thumb)) %> Editing <%= current_user.name %></h1>
	</span>
</div>

<div id="main">
		<% form_for @user, :html => { :multipart => true } do |f| %>
		
			<div class="full_pane">
			  <p class="field">
					<label>First Name</label><%= f.text_field :first_name %>
				</p>
				<p class="field">
					<label>Last Name</label><%= f.text_field :last_name %>
				</p>
				<p class="field">
					<label>Position</label><%= f.text_field :position %>
				</p>
				<p class="field">
					<label>Login</label><%= f.text_field :login %>
				</p>
				<p class="field">
					<label>Password</label><%= f.text_field :password %>
				</p>
				<p class="field">
					<label>Avatar</label>
					<div style="margin-bottom:20px">
						<%= f.file_field :avatar %>
					</div>
				</p>
			
			<%- #User options -%>
			<h3 style="width:100%; border-bottom:1px solid #ccc; margin-bottom:15px; padding-bottom:5px">Options</h3>
				
				<p class="field">
					<label>Send notifications to</label>
					<input type="checkbox">My email</input><br/>
					<input type="checkbox">My phone</input>
				</p>
				<p class="field">
					<label>I'd like to know when</label>
					<input type="checkbox">Users add to a topic I'm following</input><br/>
					<input type="checkbox">A user I'm following adds a Topic</input>
				</p>
				<p class="field">
					<label>Following</label>
					<input type="checkbox">Follow all topics created by people I am following</input>
				</p>
			</div>
			<p class="full center left clear"><%= f.submit "Update Information", :class => "metal" %></p>
		<% end %>
</div>

