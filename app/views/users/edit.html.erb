	<div id="title">
	<span>
		<h1><%= image_tag(avatar_url(@user, :thumb)) %> Editing <%= current_user.name %></h1>
	</span>
</div>

<div id="main">
		<% form_for @user, :html => { :multipart => true } do |f| %>
		
			<div class="full_pane">
			  <p class="field">
					<label>First Name</label><%= f.text_field :first_name %>
				</p>
				<p class="field">
					<label>Last Name</label><%= f.text_field :last_name %>
				</p>
				
				<p class="field">
						<label>Avatar</label><%= f.file_field :avatar %>
				</p>
					<p class="field">
						<label>Login</label><%= f.text_field :login %>
					</p>
					<p class="field">
						<label>Password</label><%= f.text_field :password %>
					</p>
			</div>
			<p class="full center left clear"><%= f.submit "Update Information", :class => "metal" %></p>
		<% end %>
</div>

