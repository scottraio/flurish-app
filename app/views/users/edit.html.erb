<div id="title">
	<span>
		<h1><%= image_tag(avatar_url(@user, :thumb)) %> Editing <%= current_user.name %></h1>
	</span>
</div>

<div id="main">
	<div id="edit_user" class="padded">
		<% form_for @user, :html => { :multipart => true } do |f| %>
		  <p><%= f.text_field :name %></p>
			<p><%= f.text_field :login %></p>
			<p><%= f.file_field :avatar %></p>
			<%= f.submit "Save" %>
		<% end %>
	</div>
</div>
